@model  String
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/css/mdb.min.css" rel="stylesheet">
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/js/mdb.min.js"></script>
    <style>
        #l1:hover {
            color: gold;
            text-decoration: underline;
        }

        #l2:hover {
            color: gold;
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Material form login -->
    <div class="container col-lg-3 col-md-6 col-sm-8">
        <div class="card mt-5">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong>Admin Sign in</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">

                <!-- Form -->
                <form class="text-center" method="post" style="color: #757575;" action="../Admin/Admin_Login"
                    onsubmit="return LoginvalidateForm()">

                    <!-- Email -->
                    <div class="md-form">
                        <input type="email" id="materialLoginFormEmail" name="email" class="form-control">
                        <label for="materialLoginFormEmail">E-mail</label>
                    </div>

                    <p id="e1"></p>
                    <!-- Password -->
                    <div class="md-form">
                        <input type="password" id="materialLoginFormPassword" name="password" class="form-control">
                        <label for="materialLoginFormPassword">Password</label>
                    </div>
                    <p id="e2"></p>
                    <div id="d1" class="mt-5">
                        <small>
                            <b>By continuing, you agree to Amazon's
                                <a href="#" id="l1">Conditions of Use</a>
                                and
                                <a href="#" id="l2">Privacy Notice.</a> </b>
                        </small>
                    </div>

                    <!-- Sign in button -->

                    <input type="submit" value="SIGN IN" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0">
                    <br>
                        <label class="small" style="color:red">@Model</label>
                    <!-- Register -->
                    <p>
                        Not a member?
                        <a href="../Admin/SignUp" id="l1">Register</a>
                    </p>

                    <!-- Social login -->

                </form>
                <!-- Form -->

            </div>

        </div>
        <!-- Material form login -->
    </div>
    <script>

        function LoginvalidateForm() {
            var check = true;
            var re = /^(([^<>()\[\]\\.,;:\s"]+(\.[^<>()\[\]\\.,;:\s"]+)*)|(".+"))((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var email = document.getElementById('materialLoginFormEmail').value;
            var password = document.getElementById('materialLoginFormPassword').value;
            var errName1 = $("#e1");
            var errName2 = $("#e2");

            errName1.addClass('small');
            errName2.addClass('small');
            $("#e1").css("color", "red");
            $("#e2").css("color", "red");
            if (email == "") {
                document.getElementById("materialLoginFormEmail").style.borderColor = "red";
                errName1.html("* Email Required");
                check = false;
            }
            else if (re.test(email) == false) {
                document.getElementById("materialLoginFormEmail").style.borderColor = "red";
                errName1.html("* Invalid Email");
                check = false;
            }
            else {
                errName1.html("");
                document.getElementById("materialLoginFormEmail").style.borderColor = "green";
            }
            if (password == "") {
                document.getElementById("materialLoginFormPassword").style.borderColor = "red";
                errName2.html("* Password Required");
                check = false;
            }
            else if (password.length < 6) {
                document.getElementById("materialLoginFormPassword").style.borderColor = "red";
                errName2.html("* Password Must have minimum 6 Characters");
                check = false;
            }
            else {

                document.getElementById("materialLoginFormPassword").style.borderColor = "green";
            }
            if (check == false)
                return false;
            else
                return true;

        }
    </script>
</body>

</html>
