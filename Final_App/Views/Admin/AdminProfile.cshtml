        <!-- Material form register -->
    </div>

    <script>

        $(document).ready(function () {
            document.getElementById("example").defaultValue = "@Model.DOB";
            if ("@Model.Gender" == "Male") {
                $("#materialInline1").prop("checked", true);

            }
            else {
                $("#materialInline2").prop("checked", true);
            }
        });
        $(document).ready(function () {
            $("#passwordshow a").on('click', function (event) {

                event.preventDefault();
                var passStatus = document.getElementById('pass-status');
                var x = document.getElementById("materialRegisterFormPassword");

                if (x.type === "password") {
                    x.type = "text";
                    passStatus.className = 'fa fa-eye';

                } else {
                    x.type = "password";
                    passStatus.className = 'fa fa-eye-slash';
                }

            });
        });

        function ProfileFormValidation() {

            var check = true;
            var re = /^(([^<>()\[\]\\.,;:\s"]+(\.[^<>()\[\]\\.,;:\s"]+)*)|(".+"))((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var email = document.getElementById('materialRegisterFormEmail').value;

            var password = document.getElementById('materialRegisterFormPassword').value;

            var fname = document.getElementById('materialRegisterFormFirstName').value;

            var lname = document.getElementById('materialRegisterFormLastName').value;

            var phone = document.getElementById('materialRegisterFormPhone').value;

            var cnic = document.getElementById('materialRegisterFormCNIC').value;

            var Qualfication = document.getElementById('materialRegisterFormQualfication').value;

            //var male = docoment.getElementById('materialInline1');
            //var female = docoment.getElementById('materialInline2');
            var address = document.getElementById('form7').value;

            var errName1 = $("#e1");
            var errName2 = $("#e2");
            var errName3 = $("#e3");
            var errName4 = $("#e4");
            var errName5 = $("#e5");
            var errName6 = $("#e6");
            var errName7 = $("#e7");
            var errName8 = $("#e8");
            var errName9 = $("#e9");


            errName1.addClass('small');
            errName2.addClass('small');
            errName3.addClass('small');
            errName4.addClass('small');
            errName5.addClass('small');
            errName6.addClass('small');
            errName7.addClass('small');
            errName8.addClass('small');
            errName9.addClass('small');
            $("#e1").css("color", "red");
            $("#e2").css("color", "red");
            $("#e3").css("color", "red");
            $("#e4").css("color", "red");
            $("#e5").css("color", "red");
            $("#e6").css("color", "red");
            $("#e7").css("color", "red");
            $("#e8").css("color", "red");
            $("#e9").css("color", "red");

            //FirstName Validations
            if (fname == "") {
                document.getElementById("materialRegisterFormFirstName").style.borderColor = "red";
                errName1.html("* FirstName Required");
                check = false;

            }
            else if (fname.length < 3) {
                document.getElementById("materialRegisterFormFirstName").style.borderColor = "red";
                errName1.html("* Min 3 Characters");
                check = false;
            }
            else {
                errName1.html("");
                document.getElementById("materialRegisterFormFirstName").style.borderColor = "green";
            }
            //FirstName errors
            if (lname == "") {
                document.getElementById("materialRegisterFormLastName").style.borderColor = "red";
                errName2.html("* LastName Required");
                check = false;
            }
            else if (lname.length < 3) {
                document.getElementById("materialRegisterFormLastName").style.borderColor = "red";
                errName2.html("* Min 3 Characters");
                check = false;
            }
            else {
                errName2.html("");
                document.getElementById("materialRegisterFormLastName").style.borderColor = "green";
            }

            //Email Validations
            if (email == "") {
                document.getElementById("materialRegisterFormEmail").style.borderColor = "red";
                errName3.html("* Email Required");
                check = false;
            }
            else if (re.test(email) == false) {
                document.getElementById("materialRegisterFormEmail").style.borderColor = "red";
                errName3.html("* Invalid Email");
                check = false;
            }
            else {
                errName3.html("");
                document.getElementById("materialRegisterFormEmail").style.borderColor = "green";
            }
            //Password Validations
            if (password == "") {
                document.getElementById("materialRegisterFormPassword").style.borderColor = "red";
                errName4.html("* Password Required");
                check = false;
            }
            else if (password.length < 6) {
                document.getElementById("materialRegisterFormPassword").style.borderColor = "red";
                errName4.html("* Password Must have minimum 6 Characters");
                check = false;
            }
            else {
                errName4.html("");
                document.getElementById("materialRegisterFormPassword").style.borderColor = "green";
            }
            //Phone Validations
            if (phone == "") {
                document.getElementById("materialRegisterFormPhone").style.borderColor = "red";
                errName5.html("* Password Required");
                check = false;
            }
            else if (phone.length != 11) {
                document.getElementById("materialRegisterFormPhone").style.borderColor = "red";
                errName5.html("* PhoneNo Must have 11 digits");
                check = false;
            }
            else {
                errName5.html("");
                document.getElementById("materialRegisterFormPhone").style.borderColor = "green";
            }


            //CNIC Validations
            if (cnic == "") {
                document.getElementById("materialRegisterFormCNIC").style.borderColor = "red";
                errName6.html("* CNIC Required");
                check = false;
            }
            else if (cnic.length != 15) {
                document.getElementById("materialRegisterFormCNIC").style.borderColor = "red";
                errName6.html("* CNIC Must have 15 digts");
                check = false;
            }
            else {
                errName6.html("");
                document.getElementById("materialRegisterFormCNIC").style.borderColor = "green";
            }
            //Gender Validations
            if (document.getElementById('materialInline1').checked || document.getElementById('materialInline2').checked) {
                errName7.html("");
            }
            else {
                errName7.html("* Gender Required");
                check = false;
            }
            //Qualification Validations
            if (Qualfication == "") {
                document.getElementById("materialRegisterFormQualfication").style.borderColor = "red";
                errName8.html("* Qualification Required");
                check = false;
            }

            else {
                errName8.html("");
                document.getElementById("materialRegisterFormQualfication").style.borderColor = "green";
            }



            //Address Validations
            if (address == "") {
                document.getElementById("form7").style.borderColor = "red";
                errName9.html("* Address Required");
                check = false;
            }

            else if (address.length < 10) {
                document.getElementById("form7").style.borderColor = "red";
                errName9.html("* Plz Enter Valid Address Contains Complete Info");
                check = false;
            }
            else {
                errName9.html("");
                document.getElementById("form7").style.borderColor = "green";
            }
            if (check == false)
                return false;
            else
                return true;

        }
    </script>
</body>
