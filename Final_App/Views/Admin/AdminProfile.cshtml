    <div class="container col-lg-4 col-md-4" style="text-align: center">
        <button type="button" class="btn btn-danger">

            <h2><b>Admin Profile</b></h2>
        </button>
        <!-- Material form register -->
        <div class="card">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong>Admin Profile</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">

                <!-- Form -->
                <form class="text-center" method="post" style="color: #757575;" onsubmit="return ProfileFormValidation()" action="../Admin/Admin_Update_Profile">

                    <div class="form-row">
                        <div class="col">
                            <!-- First name -->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormFirstName" name="First_Name" value="@Model.First_Name" class="form-control">
                                <label for="materialRegisterFormFirstName">First name</label>
                            </div>
                            <p id="e1"></p>
                        </div>
                        <div class="col">
                            <!-- Last name -->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormLastName" name="Last_Name" value="@Model.Last_Name" class="form-control">
                                <label for="materialRegisterFormLastName">Last name</label>
                            </div>
                            <p id="e2"></p>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col">
                            <!-- First name -->
                            <div class="md-form">
                                <a><i id="pass-status1" aria-hidden="true" style="margin-left: 120px"></i></a>

                                <input type="email" id="materialRegisterFormEmail" name="new_email" value="@Model.email" class="form-control" readonly>
                                <label for="materialRegisterFormEmail">Email</label>
                            </div>
                            <p id="e3"></p>
                        </div>
                        <div class="col">
                            <!-- Last name -->
                            <div class="md-form" id="passwordshow">
                                <a><i id="pass-status" class="fa fa-eye-slash" aria-hidden="true" style="margin-left: 120px"></i></a>
                                <input type="password" id="materialRegisterFormPassword" name="new_Password" value="@Model.Password" class="form-control">

                                <label for="materialRegisterFormPassword">Password</label>
                            </div>
                            <p id="e4"></p>
                        </div>
                    </div>

                    <!-- Phone number -->
                    <div class="form-row">
                        <div class="col">
                            <!-- First name -->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormPhone" name="phone" value="@Model.Phone" class="form-control">
                                <label for="materialRegisterFormPhone">Phone No</label>
                            </div>
                            <p id="e5"></p>
                        </div>
                        <div class="col">
                            <!-- Last name -->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormCNIC" name="cnic" value="@Model.CNIC" class="form-control">
                                <label for="materialRegisterFormCNIC">CNIC</label>
                            </div>
                            <p id="e6"></p>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <!-- First name -->
                            <!-- Basic dropdown -->
                            <!-- Material inline 1 -->
                            <label class="form-check-label" for="materialInline1"><b>Gender</b></label>
                            <br>
                            <div class="form-check form-check-inline">
                                <input type="radio" value="Male" class="form-check-input" id="materialInline1" name="Gender">
                                <label class="form-check-label" for="materialInline1">Male</label>
                            </div>

                            <!-- Material inline 2 -->
                            <div class="form-check form-check-inline">
                                <input type="radio" value="Female" class="form-check-input" id="materialInline2" name="Gender">
                                <label class="form-check-label" for="materialInline2">Female</label>
                            </div>

                            <p id="e7"></p>
                            <!-- Material inline 3 -->

                            <!-- Basic dropdown -->
                        </div>
                        <div class="col">
                            <!-- Last name -->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormQualfication" name="Qualification" value="@Model.Qualfication" class="form-control">
                                <label for="materialRegisterFormQualfication">Qualfication</label>
                            </div>
                            <p id="e8"></p>
                        </div>
                    </div>
                    <div class="md-form">
                        <textarea id="form7" class="md-textarea form-control" name="Address" rows="3">@Model.Address</textarea>

                        <label for="form7">
                            Address
                        </label>
                    </div>
                    <p id="e9"></p>


                    <div class="md-form">
                        <input  type="date" id="example" value="@Model.DOB" class="form-control" name="DOB">
                         <label for="example">DOB</label>
                    </div>
                    <!-- Sign up button -->
                    <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Update</button>

                    <!-- Social register -->


                    <a type="button" class="btn-floating btn-fb btn-sm">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a type="button" class="btn-floating btn-tw btn-sm">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a type="button" class="btn-floating btn-li btn-sm">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a type="button" class="btn-floating btn-git btn-sm">
                        <i class="fab fa-github"></i>
                    </a>

                    <hr>

                    <!-- Terms of service -->
                    <p>

                        <a href="" target="_blank">terms of service</a>
                </form>
                <!-- Form -->

            </div>

