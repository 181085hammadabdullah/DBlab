@model String
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/css/mdb.min.css" rel="stylesheet">
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.15.0/js/mdb.min.js"></script>
    <style>
        #l1:hover {
            color: gold;
            text-decoration: underline;
        }

        #l2:hover {
            color: gold;
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <!-- Material form login -->
    <div class="container col-lg-3 col-md-6 col-sm-8">
        <div class="card mt-5">

            <h5 class="card-header info-color white-text text-center py-4">
                <strong>Admin Sign Up</strong>
            </h5>

            <!--Card content-->
            <div class="card-body px-lg-5 pt-0">

                <!-- Form -->
                <form class="text-center" method="post" style="color: #757575;"
                    onsubmit="return RegvalidateForm()" action="../Admin/Admin_SignUp">

                    <!-- Name -->
                    <div class="md-form">
                        <input type="text" id="materialRegFormName" name="First_Name" class="form-control">
                        <label for="materialLoginFormName">First Name</label>
                    </div>
                    <p id="e1"></p>

                    <div class="md-form">
                        <input type="text" id="materialRegFormName1" name="Last_Name" class="form-control">
                        <label for="materialLoginFormName">Last Name</label>
                    </div>

                    <p id="e5"></p>
                    <!-- Email -->
                    <div class="md-form">
                        <input type="email" id="materialRegFormEmail" name="email" class="form-control">
                        <label for="materialLoginFormEmail">E-mail</label>
                    </div>

                    <p id="e2"></p>
                    <!-- Password -->
                    <div class="md-form">
                        <input type="password" id="materialRegFormPassword" name="password" class="form-control">
                        <label for="materialLoginRegPassword">Password</label>
                    </div>

                    <p id="e3"></p>
                    <!-- Re-Entered-Password -->
                    <div class="md-form">
                        <input type="password" id="materialRegFormRePassword" class="form-control">
                        <label for="materialRegFormRePassword">Re-Enter-Password</label>
                    </div>
                    <p id="e4"></p>
                    <!-- Sign Up button -->

                   

                    <input type="submit" value="Create New Account" class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0">
                    <br>
                        <label class="small" style="color:red">@Model</label>
                    <div id="d1">
                        <small>
                            <b>By creating an account, you agree to Amazon's
                                <a href="#" id="l1">Conditions of Use</a>
                                and
                                <a href="#" id="l2">Privacy Notice.</a> </b>
                        </small>
                    </div>

                </form>
                <!-- Form -->
            </div>
        </div>
        <!-- Material form login -->
    </div>
</body>
<script>

    function RegvalidateForm() {
        var check = true;
        var re = /^(([^<>()\[\]\\.,;:\s"]+(\.[^<>()\[\]\\.,;:\s"]+)*)|(".+"))((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        var fname = document.getElementById('materialRegFormName').value;
        var lname = document.getElementById('materialRegFormName1').value;
        var email = document.getElementById('materialRegFormEmail').value;
        var password = document.getElementById('materialRegFormPassword').value;
        var re_password = document.getElementById('materialRegFormRePassword').value;
        var errName1 = $("#e1");
        var errName2 = $("#e2");
        var errName3 = $("#e3");
        var errName4 = $("#e4");
        var errName5 = $("#e5");
        errName1.addClass('small');
        errName2.addClass('small');
        errName3.addClass('small');
        errName4.addClass('small');
        errName5.addClass('small');
        $("#e1").css("color", "red");
        $("#e2").css("color", "red");
        $("#e3").css("color", "red");
        $("#e4").css("color", "red");
        $("#e5").css("color", "red");
        if (fname == "") {
            document.getElementById("materialRegFormName").style.borderColor = "red";
            errName1.html("* First Name Required");
            check = false;
        }
        else if (fname.length < 3) {
            document.getElementById("materialRegFormName").style.borderColor = "red";
            errName1.html("* First Name Must Have MIN 3 Characters");
            check = false;
        }
        else {
            document.getElementById("materialRegFormName").style.borderColor = "green";
            errName1.html("");
        }

        if (lname == "") {
            document.getElementById("materialRegFormName1").style.borderColor = "red";
            errName5.html("* Last Name Required");
            check = false;
        }
        else if (fname.length < 3) {
            document.getElementById("materialRegFormName1").style.borderColor = "red";
            errName5.html("* Last Name Must Have MIN 3 Characters");
            check = false;
        }
        else {
            document.getElementById("materialRegFormName1").style.borderColor = "green";
            errName5.html("");
        }
        if (email == "") {
            document.getElementById("materialRegFormEmail").style.borderColor = "red";
            errName2.html("* Email Required");
            check = false;
        }
        else if (re.test(email) == false) {
            document.getElementById("materialRegFormEmail").style.borderColor = "red";
            errName2.html("* Invalid Email");
            check = false;
        }
        else {
            document.getElementById("materialRegFormEmail").style.borderColor = "green";
            errName2.html("");
        }
        if (password == "") {
            document.getElementById("materialRegFormPassword").style.borderColor = "red";
            errName3.html("* Password Required");
            check = false;
        }
        else if (password.length < 6) {
            document.getElementById("materialRegFormPassword").style.borderColor = "red";
            errName3.html("* Password Must Have MIN 6 characters");
            check = false;
        }
        else {
            document.getElementById("materialRegFormPassword").style.borderColor = "green";
            errName3.html("");
        }
        if (re_password == "") {
            document.getElementById("materialRegFormRePassword").style.borderColor = "red";
            errName4.html("* Re-Enter-Password Required");
            check = false;
        }
        else if (password != re_password) {
            document.getElementById("materialRegFormRePassword").style.borderColor = "red";
            errName4.html("* Password Must Matched");
            check = false;
        }
        else {
            document.getElementById("materialRegFormPassword").style.borderColor = "green";
            errName4.html("");
        }
        if (check == false)
            return false;
        else
            return true;

    }
</script>

</html>
