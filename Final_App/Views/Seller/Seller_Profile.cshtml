              background-size: cover;
}
        </style>




        <div class="container col-lg-4 col-md-4" style="text-align: center">
            <br>
            <!-- Material form register -->
            <div class="card">

                <h5 class="card-header info-color white-text text-center py-4">
                    <strong>Seller Profile</strong>
                </h5>

                <!--Card content-->
                <div class="card-body px-lg-5 pt-0">

                    <!-- Form -->
                    <form class="text-center" method="post" style="color: #757575;" onsubmit="return SellerProfileValidation()" action="../Seller/Seller_Update_Profile">

                        <div class="form-row">
                            <div class="col">
                                <!-- First name -->
                                <div class="md-form">
                                    <input type="text" id="materialRegisterFormName" name="Name" value="@Model.Name" class="form-control">
                                    <label for="materialRegisterFormName">Name</label>
                                </div>
                                <p id="e1"></p>
                            </div>

                        </div>

                        <div class="form-row">
                            <div class="col">
                                <!-- email -->
                                <div class="md-form">
                                    <a><i id="pass-status1" aria-hidden="true" style="margin-left: 120px"></i></a>

                                    <input type="email" id="materialRegisterFormEmail" name="new_email" value="@Model.Email" class="form-control" readonly>
                                    <label for="materialRegisterFormEmail">Email</label>
                                </div>
                                <p id="e3"></p>
                            </div>
                            <div class="col">
                                <!-- password -->
                                <div class="md-form" id="passwordshow">
                                    <a><i id="pass-status" class="fa fa-eye-slash" aria-hidden="true" style="margin-left: 120px"></i></a>
                                    <input type="password" id="materialRegisterFormPassword" name="new_Password" value="@Model.Password" class="form-control">

                                    <label for="materialRegisterFormPassword">Password</label>
                                </div>
                                <p id="e4"></p>
                            </div>
                        </div>

                        <!-- Phone number -->
                        <div class="form-row">
                            <div class="col">
                                <!-- First name -->
                                <div class="md-form">
                                    <input type="text" id="materialRegisterFormPhone" name="ContactNo" value="@Model.ContactNo" class="form-control">
                                    <label for="materialRegisterFormPhone">Contact No</label>
                                </div>
                                <p id="e5"></p>
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="col">
                                <!-- Basic dropdown -->
                                <!-- Material inline 1 -->
                                <label class="form-check-label" for="materialInline1"><b>Gender</b></label>
                                <br>
                                <div class="form-check form-check-inline">
                                    <input type="radio" value="Male" class="form-check-input" id="materialInline1" name="Gender">
                                    <label class="form-check-label" for="materialInline1">Male</label>
                                </div>

                                <!-- Material inline 2 -->
                                <div class="form-check form-check-inline">
                                    <input type="radio" value="Female" class="form-check-input" id="materialInline2" name="Gender">
                                    <label class="form-check-label" for="materialInline2">Female</label>
                                </div>

                                <p id="e7"></p>
                                <!-- Material inline 3 -->
                                <!-- Basic dropdown -->
                            </div>
                        </div>
                        <div class="md-form">
                            <textarea id="form7" class="md-textarea form-control" name="Address" rows="3">@Model.Address</textarea>

                            <label for="form7">
                                Address
                            </label>
                        </div>
                        <p id="e9"></p>

                        <div class="col">
                            <!-- City-->
                            <div class="md-form">
                                <input type="text" id="materialRegisterFormCity" name="City" value="@Model.City" class="form-control">
                                <label for="materialRegisterFormCity">City</label>
                            </div>
                            <p id="e8"></p>
                        </div>

                        <br />
                        <div class="md-form">
                            <p style="text-align:left;">DOB</p>
                            <input type="date" id="DOB" placeholder="@Model.DOB" class="form-control" name="DOB">
     


                        </div>

                        @*<div class="md-form">
                            <input placeholder="Selected date" type="date" id="date-picker-example" class="form-control datepicker" name="DOB">
                            <label for="date-picker-example">Try me...</label>
                        </div>*@
                        <!-- Sign up button -->
                        <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Update</button>

                        <hr>
                        <p>

                    </form>
                    <!-- Form -->

                </div>

            </div>
            <!-- Material form register -->
        </div>

    </div>

    <script>

        $(document).ready(function () {

            document.getElementById("DOB").defaultValue = "@Model.DOB";
            if ("@Model.Gender" == "Male") {
                $("#materialInline1").prop("checked", true);

            }
            else {
                $("#materialInline2").prop("checked", true);
            }
        });

        $(document).ready(function () {
            $("#passwordshow a").on('click', function (event) {

                event.preventDefault();
                var passStatus = document.getElementById('pass-status');
                var x = document.getElementById("materialRegisterFormPassword");

                if (x.type === "password") {
                    x.type = "text";
                    passStatus.className = 'fa fa-eye';

                } else {
                    x.type = "password";
                    passStatus.className = 'fa fa-eye-slash';
                }

            });
        });
        function SellerProfileValidation() {

            var check = true;
            var re = /^(([^<>()\[\]\\.,;:\s"]+(\.[^<>()\[\]\\.,;:\s"]+)*)|(".+"))((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            var email = document.getElementById('materialRegisterFormEmail').value;

            var password = document.getElementById('materialRegisterFormPassword').value;

            var name = document.getElementById('materialRegisterFormName').value;

            var phone = document.getElementById('materialRegisterFormPhone').value;

            var city = document.getElementById('materialRegisterFormCity').value;

            var dob = document.getElementById('DOB').value;

            //var male = docoment.getElementById('materialInline1');
            //var female = docoment.getElementById('materialInline2');
            var address = document.getElementById('form7').value;

            var errName1 = $("#e1");
            var errName3 = $("#e3");
            var errName4 = $("#e4");
            var errName5 = $("#e5");
            var errName7 = $("#e7");
            var errName8 = $("#e8");
            var errName9 = $("#e9");


            errName1.addClass('small');
            errName3.addClass('small');
            errName4.addClass('small');
            errName5.addClass('small');
            errName7.addClass('small');
            errName8.addClass('small');
            errName9.addClass('small');
            $("#e1").css("color", "red");
            $("#e3").css("color", "red");
            $("#e4").css("color", "red");
            $("#e5").css("color", "red");
            $("#e7").css("color", "red");
            $("#e8").css("color", "red");
            $("#e9").css("color", "red");

            //Name Validation
            if (name == "") {
                document.getElementById("materialRegisterFormName").style.borderColor = "red";
                errName1.html("* Name Required");
                check = false;

            }
            else if (name.length < 3) {
                document.getElementById("materialRegisterFormName").style.borderColor = "red";
                errName1.html("* Min 3 Characters");
                check = false;
            }
            else {
                errName1.html("");
                document.getElementById("materialRegisterFormName").style.borderColor = "green";
            }

            //Email Validations
            if (email == "") {
                document.getElementById("materialRegisterFormEmail").style.borderColor = "red";
                errName3.html("* Email Required");
                check = false;
            }
            else if (re.test(email) == false) {
                document.getElementById("materialRegisterFormEmail").style.borderColor = "red";
                errName3.html("* Invalid Email");
                check = false;
            }
            else {
                errName3.html("");
                document.getElementById("materialRegisterFormEmail").style.borderColor = "green";
            }
            //Password Validations
            if (password == "") {
                document.getElementById("materialRegisterFormPassword").style.borderColor = "red";
                errName4.html("* Password Required");
                check = false;
            }
            else if (password.length < 6) {
                document.getElementById("materialRegisterFormPassword").style.borderColor = "red";
                errName4.html("* Password Must have minimum 6 Characters");
                check = false;
            }
            else {
                errName4.html("");
                document.getElementById("materialRegisterFormPassword").style.borderColor = "green";
            }
            //Phone Validations
            if (phone == "") {
                document.getElementById("materialRegisterFormPhone").style.borderColor = "red";
                errName5.html("* Password Required");
                check = false;
            }
            else if (phone.length != 11) {
                document.getElementById("materialRegisterFormPhone").style.borderColor = "red";
                errName5.html("* PhoneNo Must have 11 digits");
                check = false;
            }
            else {
                errName5.html("");
                document.getElementById("materialRegisterFormPhone").style.borderColor = "green";
            }

            //Gender Validations
            if (document.getElementById('materialInline1').checked || document.getElementById('materialInline2').checked) {
                errName7.html("");
            }
            else {
                errName7.html("* Gender Required");
                check = false;
            }
            //City Validations
            if (city == "") {
                document.getElementById("materialRegisterFormCity").style.borderColor = "red";
                errName8.html("* City Required");
                check = false;
            }

            else {
                errName8.html("");
                document.getElementById("materialRegisterFormCity").style.borderColor = "green";
            }



            //Address Validations
            if (address == "") {
                document.getElementById("form7").style.borderColor = "red";
                errName9.html("* Address Required");
                check = false;
            }

            else if (address.length < 10) {
                document.getElementById("form7").style.borderColor = "red";
                errName9.html("* Please Enter Valid Address with Complete Information");
                check = false;
            }
            else {
                errName9.html("");
                document.getElementById("form7").style.borderColor = "green";
            }

            //DOB Validation
            document.getElementById("DOB").defaultValue = "@Model.DOB";

        if (check == false)
            return false;
        else
            return true;

    }
    </script>

</body>
