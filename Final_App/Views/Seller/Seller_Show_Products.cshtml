        <!-- Navbar brand -->
        <a class="navbar-brand" href="../Seller/Seller_Home">BuySalePoint.com</a>



        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
